<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bookexploring">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_margin="100dp"
        android:textSize="50sp"
        android:fontFamily="@font/bold"
        android:textColor="@color/light_gray"
        />




    <EditText
        android:id="@+id/txtchercher_UserActivity"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Titre tu va Chercher"
        android:background="@drawable/input_field"
        android:layout_margin="10dp"
        />

    <Button
        android:id="@+id/btnCherch_UserActivity"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:text="Chercher Livre"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp"
        />

    <Button
        android:id="@+id/btnvoirlivres_UserActivity"
        android:layout_width="300dp"
        android:layout_height="53dp"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:text="Voire Livres"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp"
        />

</LinearLayout>

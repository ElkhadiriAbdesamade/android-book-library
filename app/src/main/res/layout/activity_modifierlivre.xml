<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifierlivreActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        >

        <ImageView
            android:id="@+id/backArrow_ModLivre"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/backarrow" />
        <Space
            android:layout_width="50dp"
            android:layout_height="0dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginRight="35dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier Livre"
            android:textSize="40sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/regular"
            />


    </LinearLayout>



    <EditText
        android:id="@+id/txttitre_ModLivre"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Titre"
        android:background="@drawable/input_field"
        android:layout_margin="10dp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="64dp" />

    <EditText
        android:id="@+id/txtediteur_ModLivre"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:layout_margin="10dp"
        android:inputType="text"
        android:background="@drawable/input_field"
        android:hint="Editeur"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="172dp" />
    <EditText
        android:id="@+id/txtgenre_ModLivre"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:layout_margin="10dp"
        android:background="@drawable/input_field"
        android:hint="Genre"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="172dp" />
    <EditText
        android:id="@+id/txtdescription_ModLivre"
        android:layout_width="310dp"
        android:layout_height="50dp"
        android:inputType="text"
        android:layout_margin="10dp"
        android:background="@drawable/input_field"
        android:hint="Description"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="172dp" />

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="198dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewCover__ModLivre"
            android:layout_width="192dp"
            android:layout_height="185dp"
            android:background="@color/light_gray"
            app:srcCompat="@drawable/add_circle"
            tools:layout_editor_absoluteX="46dp"
            tools:layout_editor_absoluteY="317dp" />

        <Button
            android:id="@+id/btnModCover__ModLivre"
            android:layout_width="150dp"
            android:layout_height="53dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/button"
            android:fontFamily="@font/regular"
            android:text="Modif Cover"
            android:textAllCaps="false"
            android:textColor="@color/gray"
            android:textSize="24sp" />
    </LinearLayout>



    <Button
        android:id="@+id/btnModifLivre__ModLivre"
        android:layout_width="150dp"
        android:layout_height="53dp"
        android:background="@drawable/button"
        android:fontFamily="@font/regular"
        android:text="Modifier Livre"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="24sp" />
</LinearLayout>